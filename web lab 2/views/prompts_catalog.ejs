<%- include('partials/head') %>
<main>
    <div class="container">
        <section class="catalog-filter catalog-filter--desktop">
            <div class="catalog-filter__wrapper">
                <form id="filters" class="catalog-filter__form" aria-label="Filter prompts">
                <div class="catalog-filter__field">
                    <label for="ai-model" class="catalog-filter__label">AI Model</label>
                    <select id="ai-model" name="ai-model" class="catalog-filter__select">
                        <option value="" disabled selected>Select</option>
                        <option>Any</option>
                        <option>ChatGPT</option>
                        <option>Jasper</option>
                        <option>Leonardo</option>
                        <option>Gemini</option>
                        <option>QuillBot</option>
                        <option>DALL-E</option>
                        <option>Midjourney</option>
                    </select>
                </div>

                <div class="catalog-filter__field">
                    <label for="type" class="catalog-filter__label">Type</label>
                    <select id="type" name="type" class="catalog-filter__select">
                        <option value="" disabled selected>Select</option>
                        <option>Any</option>
                        <option>Text</option>
                        <option>Image</option>
                    </select>
                </div>

                <div class="catalog-filter__field">
                    <label for="price-range" class="catalog-filter__label">Price range</label>
                    <select id="price-range" name="price-range" class="catalog-filter__select">
                        <option value="" disabled selected>Select</option>
                        <option>Any</option>
                        <option>Under $5</option>
                        <option>$5-$10</option>
                        <option>$10-$20</option>
                    </select>
                </div>

                <div class="catalog-filter__field">
                    <label for="rating" class="catalog-filter__label">Rating</label>
                    <select id="rating" name="rating" class="catalog-filter__select">
                        <option value="" disabled selected>Select</option>
                        <option>Any</option>
                        <option>5&#9733;</option>
                        <option>4&#9733;</option>
                        <option>3&#9733; or less</option>
                    </select>
                </div>

                <div class="catalog-filter__field">
                    <label for="sortBy" class="catalog-filter__label">Sort By</label>
                    <select id="sortBy" name="sortBy" class="catalog-filter__select">
                        <option value="id" selected>Default</option>
                        <option value="price">Price</option>
                        <option value="rating">Rating</option>
                    </select>
                </div>

                <div class="catalog-filter__field">
                    <label for="sortOrder" class="catalog-filter__label">Order</label>
                    <select id="sortOrder" name="sortOrder" class="catalog-filter__select">
                        <option value="asc" selected>Ascending</option>
                        <option value="desc">Descending</option>
                    </select>
                </div>

                <div class="catalog-filter__search">
                    <label for="catalog-search" class="catalog-filter__label">Search by #</label>
                    <div class="catalog-filter__search-field">
                        <input 
                            type="search" 
                            id="catalog-search" 
                            name="search"
                            placeholder="Search by #" 
                            aria-label="Search by tag"
                            class="catalog-filter__search-input"
                            pattern="[A-Za-z0-9\s#]+"
                            maxlength="50"
                        >
                        <span class="error-message" id="search-error"></span>
                    </div>
                </div>
                </form>
            </div>
        </section>
    </div>
    <div class="container">
        <section class="catalog-results" aria-labelledby="prompt-results">
            <div class="prompts-group">
                <div class="catalog-grid catalog-grid--catalog">
                    <!-- Промпти будуть додані динамічно через JavaScript -->
                </div>
            </div>
            <div class="pagination"></div>
        </section>
    </div>

    <script type="module" src="/js/catalog.js"></script>
</main>
    <%- include('partials/footer') %>